<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:dither="true"
            android:shape="rectangle">

            <corners android:radius="1dp" />

            <solid android:color="@color/white_translucent" />

        </shape>
    </item>

    <item android:bottom="2dp">
        <shape
            android:dither="true"
            android:shape="rectangle">

            <corners android:radius="1dp" />

            <solid android:color="@color/white_translucent" />

        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape
            android:dither="true"
            android:shape="rectangle">

            <corners android:radius="1dp" />

            <solid android:color="@color/white_translucent" />

            <padding
                android:bottom="2dp"
                android:left="7dp"
                android:right="7dp"
                android:top="2dp" />
        </shape>
    </item>
</layer-list>