<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Rgbtool" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlHighlight">@color/transparent_accent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/background_light</item>

        <!-- ActionBar contextual mode -->
        <item name="actionModeBackground">@color/primary_light</item>
    </style>

    <style name="Theme.Rgbtool.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>
</resources>