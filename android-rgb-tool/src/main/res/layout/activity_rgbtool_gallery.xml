<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gallery.RGBToolGalleryActivity">

    <GridView
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:gravity="center"
        android:horizontalSpacing="@dimen/rgb_grid_view_horizontal_spacing"
        android:listSelector="?colorAccent"
        android:numColumns="@integer/rgb_grid_view_columns_number"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/rgb_grid_view_vertical_spacing" />

</RelativeLayout>
