<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/rgb_top_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"
            android:stretchColumns="0,1,2,3,4">

            <TableRow
                android:gravity="center_vertical"
                android:minHeight="36dp">

                <TextView
                    style="@style/RGBPanelComponentLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:text="@string/color_red" />

                <TextView
                    android:id="@+id/textView_RGB_R"
                    style="@style/RGBPanelComponent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:textIsSelectable="true" />

                <TextView
                    style="@style/RGBPanelComponentLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:text="@string/color_green" />

                <TextView
                    android:id="@+id/textView_RGB_G"
                    style="@style/RGBPanelComponent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:textIsSelectable="true" />

                <TextView
                    style="@style/RGBPanelComponentLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:text="@string/color_blue" />

                <TextView
                    android:id="@+id/textView_RGB_B"
                    style="@style/RGBPanelComponent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:textIsSelectable="true" />

                <TextView
                    style="@style/RGBPanelComponentLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:text="@string/color_opacity" />

                <TextView
                    android:id="@+id/textView_RGB_O"
                    style="@style/RGBPanelComponent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:textIsSelectable="true" />

            </TableRow>

            <TableRow
                android:gravity="center_vertical"
                android:minHeight="36dp">

                <TextView
                    style="@style/RGBPanelComponentLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:text="@string/color_hue" />

                <TextView
                    android:id="@+id/textView_HSB_H"
                    style="@style/RGBPanelComponent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:textIsSelectable="true" />

                <TextView
                    style="@style/RGBPanelComponentLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:text="@string/color_saturation" />

                <TextView
                    android:id="@+id/textView_HSB_S"
                    style="@style/RGBPanelComponent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:textIsSelectable="true" />

                <TextView
                    style="@style/RGBPanelComponentLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:text="@string/color_brightness" />

                <TextView
                    android:id="@+id/textView_HSB_B"
                    style="@style/RGBPanelComponent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="90"
                    android:textIsSelectable="true" />

            </TableRow>

            <TableRow
                android:gravity="center_vertical"
                android:minHeight="36dp">

                <TextView
                    style="@style/RGBPanelComponentLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:text="@string/color_hue" />

                <TextView
                    android:id="@+id/textView_HSL_H"
                    style="@style/RGBPanelComponent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:textIsSelectable="true" />

                <TextView
                    style="@style/RGBPanelComponentLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:text="@string/color_saturation" />

                <TextView
                    android:id="@+id/textView_HSL_S"
                    style="@style/RGBPanelComponent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:textIsSelectable="true" />

                <TextView
                    style="@style/RGBPanelComponentLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:text="@string/color_brightness" />

                <TextView
                    android:id="@+id/textView_HSL_L"
                    style="@style/RGBPanelComponent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="90"
                    android:textIsSelectable="true" />

            </TableRow>

        </TableLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@color/silver" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/color_details_complementary"
                android:textSize="@dimen/rgb_text_size_micro"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_small"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/complementaryColor"
                    android:layout_width="@dimen/manual_picker_color_details_width"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/default_margin"
                    android:paddingTop="@dimen/padding_small"
                    android:paddingEnd="@dimen/default_margin"
                    android:paddingBottom="@dimen/padding_small" />

                <TextView
                    android:id="@+id/complementaryColorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/default_margin"
                    android:paddingTop="@dimen/padding_small"
                    android:paddingEnd="@dimen/default_margin"
                    android:paddingBottom="@dimen/padding_small"
                    android:textSize="@dimen/rgb_text_size_medium" />

                <ImageButton
                    android:id="@+id/complementaryCopy"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="@dimen/default_margin"
                    android:background="?selectableItemBackgroundBorderless"
                    app:srcCompat="@drawable/ic_content_copy" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@color/silver" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/color_details_contrast"
                android:textSize="@dimen/rgb_text_size_micro"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_small"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/contrastColor"
                    android:layout_width="@dimen/manual_picker_color_details_width"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/default_margin"
                    android:paddingTop="@dimen/padding_small"
                    android:paddingEnd="@dimen/default_margin"
                    android:paddingBottom="@dimen/padding_small" />

                <TextView
                    android:id="@+id/contrastColorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/default_margin"
                    android:paddingTop="@dimen/padding_small"
                    android:paddingEnd="@dimen/default_margin"
                    android:paddingBottom="@dimen/padding_small"
                    android:textSize="@dimen/rgb_text_size_medium" />

                <ImageButton
                    android:id="@+id/contrastCopy"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="@dimen/default_margin"
                    android:background="?selectableItemBackgroundBorderless"
                    app:srcCompat="@drawable/ic_content_copy" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@color/silver" />

        <LinearLayout
            android:id="@+id/firstColorSample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/color_details_as_text_title"
                android:textSize="@dimen/rgb_text_size_micro"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/firstColorSampleTextNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_small"
                android:layout_marginBottom="@dimen/padding_small"
                android:paddingStart="@dimen/default_margin"
                android:paddingTop="@dimen/padding_small"
                android:paddingEnd="@dimen/default_margin"
                android:paddingBottom="@dimen/padding_small"
                android:text="@string/color_details_text_sample"
                android:textSize="@dimen/rgb_text_size_medium"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondColorSample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/secondColorSampleTextNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/default_margin"
                android:paddingTop="@dimen/padding_small"
                android:paddingEnd="@dimen/default_margin"
                android:paddingBottom="@dimen/padding_small"
                android:text="@string/color_details_text_sample"
                android:textSize="@dimen/rgb_text_size_medium"
                android:textStyle="normal" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@color/silver" />

        <LinearLayout
            android:id="@+id/firstColorSampleBg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/color_details_as_background_title"
                android:textSize="@dimen/rgb_text_size_micro"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/firstColorSampleTextNormalBg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_small"
                android:layout_marginBottom="@dimen/padding_small"
                android:paddingStart="@dimen/default_margin"
                android:paddingTop="@dimen/padding_small"
                android:paddingEnd="@dimen/default_margin"
                android:paddingBottom="@dimen/padding_small"
                android:text="@string/color_details_text_sample"
                android:textSize="@dimen/rgb_text_size_medium"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondColorSampleBg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/secondColorSampleTextNormalBg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/default_margin"
                android:paddingTop="@dimen/padding_small"
                android:paddingEnd="@dimen/default_margin"
                android:paddingBottom="@dimen/padding_small"
                android:text="@string/color_details_text_sample"
                android:textSize="@dimen/rgb_text_size_medium"
                android:textStyle="normal" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>