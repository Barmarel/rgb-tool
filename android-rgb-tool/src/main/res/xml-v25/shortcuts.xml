<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
        android:shortcutId="action_livepicker"
        android:enabled="true"
        android:icon="@mipmap/ic_shortcut_livepicker"
        android:shortcutShortLabel="@string/title_activity_live_picker">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="com.fastebro.androidrgbtool"
            android:targetClass="com.fastebro.androidrgbtool.livepicker.LivePickerActivity" />
        <!-- If your shortcut is associated with multiple intents, include them
             here. The last intent in the list determines what the user sees when
             they launch this shortcut. -->
        <categories android:name="android.shortcut.conversation" />
    </shortcut>

    <shortcut
        android:shortcutId="action_colorpicker"
        android:enabled="true"
        android:icon="@mipmap/ic_shortcut_colorpicker"
        android:shortcutShortLabel="@string/title_activity_color_picker">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="com.fastebro.androidrgbtool"
            android:targetClass="com.fastebro.androidrgbtool.colorpicker.ColorPickerActivity" />
        <categories android:name="android.shortcut.conversation" />
    </shortcut>
</shortcuts>