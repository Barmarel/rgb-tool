<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ui.RGBToolGalleryActivity"
                android:background="@color/dark_gray_2" >

    <GridView
        android:id="@+id/grid_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:numColumns="@integer/rgb_grid_view_columns"
        android:horizontalSpacing="@dimen/rgb_grid_view_horizontal_spacing"
        android:verticalSpacing="@dimen/rgb_grid_view_vertical_spacing"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="none"
        android:listSelector="@android:color/transparent"
        android:gravity="center" />

</RelativeLayout>
